<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/avis</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>

        <property name="connection.pool_size">10</property>

        <property name="show_sql">true</property>

        <property name="hbm2ddl.auto">update</property>
        
        <mapping class="fr.humanbooster.ar.avis.business.Avis" />
        <mapping class="fr.humanbooster.ar.avis.business.Classification" />
        <mapping class="fr.humanbooster.ar.avis.business.Editeur" />
        <mapping class="fr.humanbooster.ar.avis.business.Genre" />
        <mapping class="fr.humanbooster.ar.avis.business.Jeu" />
        <mapping class="fr.humanbooster.ar.avis.business.Joueur" />
        <mapping class="fr.humanbooster.ar.avis.business.ModeleEconomique" />
        <mapping class="fr.humanbooster.ar.avis.business.Plateforme" />
        <mapping class="fr.humanbooster.ar.avis.business.Fichier" />

    </session-factory>
</hibernate-configuration>